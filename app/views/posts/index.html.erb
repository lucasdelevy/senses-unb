<body>
  <%= javascript_include_tag "application" %>
   <div id="menu">
    <div class="wrapper">
      <div class="navigation">
      <a href="/#about">quem somos</a>
      <a href="/#team">nossa equipe</a>
      <a href="/#join">como participar</a>
      <a href="/#contact">contato</a>
      <% if logged_in? %>
      <a> LOGGED</a>
      <% end %>
      </div>
