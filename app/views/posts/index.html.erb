  </div> 

  <div class="welcome">
    <% if logged_in? %>
      <p id="new-post">
        <a href='posts/new'><span></span>novo post</a>
      </p>
    <% end %>
  </div>

  <div class="wrapper">
    <div class="posts-index" id="posts-index">
      <%= render @posts %>
